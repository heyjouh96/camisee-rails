<!DOCTYPE html>
<html>
<head>
  <title>Camisee</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  
            
  <%= nav_bar brand: "Camisee", brand_link: root_url do %>
      <%= menu_group do %>
          <%= menu_item "Produtos", root_path %>
          <%= menu_item "UsuÃ¡rios", "/usuarios" %>
      <% end %>
      <%= menu_group do %>
        <%= form_tag busca_produto_path, method: :get, class: "navbar-form navbar-right" do %>
          <div class="form-inline">
            <%= text_field_tag :nome, @busca, class: "form-control" %>
            <%= button_to "Buscar", nil, class: "btn btn-default" %>
          </div>
        <% end %>
      <% end %>
  <% end %>
  
  <div class="container">

    <%= yield %>
    
  </div>

</body>
</html>
