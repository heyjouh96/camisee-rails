
<h1 class="page-header">Produtos</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Quantidade</th>
        </tr>
    </thead>
    <tbody>
        <% @produtos.each do |produto| %>
            <tr>
                <td><%= produto.nome %></td>
                <td><%= produto.descricao %></td>
                <td><%= sprintf("%.2f", produto.preco) %></td>
                <td><%= produto.quantidade %></td>
            </tr>
        <% end %>
    </tbody>
</table>
