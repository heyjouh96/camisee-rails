
<h1 class="page-header">Produtos</h1>

<table class="table table-striped table-bordered">
    <% if @produtos.size > 0 %>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Preço</th>
                <th>Quantidade</th>
            </tr>
        </thead>
        <tbody>
            <% @produtos.each do |produto| %>
                <tr>
                    <td><%= produto.nome %></td>
                    <td><%= produto.descricao %></td>
                    <td><%= sprintf("%.2f", produto.preco) %></td>
                    <td><%= produto.quantidade %></td>
                </tr>
            <% end %>
        </tbody>
    <% else %>
        <p>Nenhum produto foi encontrado para o termo "<strong><%= @busca %></strong>".</p>
    <% end %>
</table>
